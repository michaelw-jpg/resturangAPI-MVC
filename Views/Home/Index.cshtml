@model IEnumerable<resturangAPI_MVC.Models.Menu>
@{
    ViewData["Title"] = "Home Page";
}

@section Meta {
    <meta name="description" content="Välkommen till vår italienska restaurang. Upptäck populära rätter, färska råvaror och genuina smaker från Italien.">
    <meta name="keywords" content="Italiensk restaurang, pasta, pizza, italiensk mat, populära rätter">
    <link rel="canonical" href="@Url.Action("Index", "Home", null, Context.Request.Scheme)" />
}

<div class="text-center mb-5">
    <h1 class="display-4">Välkommen till vår Restaurang!</h1>
    <p>
        Upptäck vår meny med handplockade favoriter och smakrika rätter direkt från Italien.
        Vi erbjuder en unik upplevelse med färska råvaror, härlig atmosfär och mat som gör varje måltid minnesvärd.
    </p>
    <p>Ta en titt på våra <strong>populära rätter</strong> nedan och låt dig inspireras!</p>
</div>

<h2 class="mb-4 text-center">Popular Menu Items</h2>

@if (Model != null && Model.Any(m => m.IsPopular))
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Where(m => m.IsPopular))
        {
            <div class="col">
                <article class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? Url.Content("~/images/italianfood.jpg") : item.ImageUrl)"
                         alt="@item.Name"
                         class="card-img-top"
                         style="height:200px; object-fit:cover;"
                         onerror="this.onerror=null; this.src='@Url.Content("~/images/italianfood.jpg")';" />
                    <div class="card-body">
                        <h3 class="card-title h5">@item.Name</h3>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("sv-SE"))</span>
                        <span>
                            <i class="fa-solid fa-flag text-danger"></i>
                        </span>
                    </div>
                </article>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No popular menu items found.</p>
}
